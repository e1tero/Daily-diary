<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:theme="@style/MainTheme"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listNotes"
        android:layout_alignBottom="@+id/listNotes"
        android:layout_marginEnd="15dp"
        android:background="#f68545"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_fab" />

    <ListView
        android:id="@+id/listNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:dividerHeight="1dp"
        android:padding="5dp">

    </ListView>

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listNotes"
        android:background="#00000000"
        android:layout_alignTop="@+id/listNotes"
        android:layout_alignEnd="@+id/listNotes"
        android:layout_alignBottom="@+id/listNotes"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="240dp"
        app:srcCompat="@drawable/placeholder" />


</RelativeLayout>